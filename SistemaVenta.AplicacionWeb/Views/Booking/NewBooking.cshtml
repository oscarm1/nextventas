@{
    ViewData["Title"] = "Nuevo Reserva";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <!-- ============================================================
    =ESTILOS PARA ESTA PAGINA
    ===============================================================-->
    <link href="~/vendor/select2/select2.min.css" rel="stylesheet">
    <style>
        .select2 {
            width: 100% !important;
        }

        .select2-container--default .select2-selection--single {
            background-color: #eaecf4;
            border: 1px solid #aaa;
            border-radius: 4px;
        }

        .select2-search--dropdown .select2-search__field {
            height: calc(1.5em + 0.5rem + 2px);
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
            line-height: 1.5;
            border-radius: 0.2rem;
        }
    </style>
}

    <div class="row">
        <div class="col-sm-8">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 bg-gradient-info">
                            <h6 class="m-0 font-weight-bold text-white">Establecimiento</h6>
                        </div>
                        <div class="collapse show" id="collapseEstablishment">
                            <div class="card-body">
                                <div class="form-row">
                                    <div class="form-group col-sm-12">
                                        <select class="form-control form-control-sm" id="cboSearchEstablishment">
                                            <option value=""></option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table class="table table-striped table-sm" id="tbEstablishment">
                                            <thead>
                                                <tr>
                                                    @*                                        <th></th>*@
                                                    <th>Nit</th>
                                                    <th>Nombre</th>
                                                    <th>Contacto</th>
                                                    <th>N. Reserva</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 bg-gradient-info">
                            <h6 class="m-0 font-weight-bold text-white">Habitaciones</h6>
                        </div>
                        <div class="collapse" id="collapseRoom">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table class="table table-striped table-sm" id="tbRoom">
                                            <thead>
                                                <tr>
                                                    <th># Habitacion</th>
                                                    <th>Descripcion</th>
                                                    <th>Capacidad</th>
                                                    <th>Val. Unitario</th>
                                                    <th>Cantidad</th>
                                                    <th>Total</th>
                                                    <th>Seleccionar</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 bg-gradient-info">
                            <h6 class="m-0 font-weight-bold text-white">Huesped Principal</h6>
                        </div>
                        <div class="collapse" id="collapseGuest">

                            <div class="card-body">
                                <form>
                                    <div class="mb-3 d-flex flex-wrap justify-content-between align-items-center">
                                        <div class="mb-3">
                                            <select class="form-select form-control" aria-label="Tipo de Documento">
                                                <option selected>Abre este menú select</option>
                                                <option value="1">CC</option>
                                                <option value="2">CE</option>
                                                <option value="3">DNI</option>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <input class="form-control" type="text" placeholder="Numero Identificacion" aria-label="Numero Identificacion">
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="nombres" class="form-label">Nombres</label>
                                        <input type="text" class="form-control" id="nombre_establecimiento">
                                    </div>
                                    <div class="mb-3">
                                        <label for="apellidos" class="form-label">Apellidos</label>
                                        <input type="text" class="form-control" id="rnt_establecimiento">
                                    </div>
                                    <div class="mb-3">
                                        <label for="ciudad_recidencua" class="form-label">Ciudad de Recidencia</label>
                                        <input type="text" class="form-control" id="nombre_establecimiento">
                                    </div>
                                    <div class="mb-3">
                                        <label for="ciudad_procedencia" class="form-label">Ciudad de Procedencia</label>
                                        <input type="text" class="form-control" id="rnt_establecimiento">
                                    </div>
                                    <div class="mb-3">
                                        <label for="motivo" class="form-label">Motivo</label>
                                        <input type="text" class="form-control" id="rnt_establecimiento">
                                    </div>
                                    <div class="mb-3">
                                        <label for="numero_acompanantes" class="form-label">Numero Acompanantes</label>
                                        <input type="text" class="form-control" id="rnt_establecimiento">
                                    </div>
                                    <div class="mb-3">
                                        <label for="check_in" class="form-label">Fecha de Check-In</label>
                                        <input type="date" class="form-control" id="check_in">
                                    </div>
                                    <div class="mb-3">
                                        <label for="check_out" class="form-label">Fecha de Check-Out</label>
                                        <input type="date" class="form-control" id="check_out">
                                    </div>
                                    @*                                    <div class="mb-3">
                                <label for="tipo_acomodacion" class="form-label">Tipo de Acomodación</label>
                                <input type="text" class="form-control" id="tipo_acomodacion">//todo ojo esta info debe adicionarse al establecimiento
                                </div>*@
                                    <button type="submit" class="btn btn-primary">Siguiente</button>
                                </form>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-4">

            <div class="row">
                <div class="col-sm-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 bg-gradient-info">
                            <h6 class="m-0 font-weight-bold text-white">Detalle Reserva</h6>
                        </div>
                        <div class="card-body">
                            <div class="input-group input-group-sm mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="cboTipoDocumentoMovimiento">Tipo</label>
                                </div>
                                <select class="custom-select" id="cboTipoDocumentoMovimiento">
                                </select>
                            </div>
                            <div class="input-group input-group-sm mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupSubTotal">Sub Total</span>
                                </div>
                                <input type="text" class="form-control text-right" aria-label="Small" aria-describedby="inputGroupSubTotal" id="txtSubTotal" disabled>
                            </div>
                            <div class="input-group input-group-sm mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupIGV">IMP (18%)</span>
                                </div>
                                <input type="text" class="form-control text-right" aria-label="Small" aria-describedby="inputGroupIGV" id="txtIGV" disabled>
                            </div>
                            <div class="input-group input-group-sm mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupTotal">Total</span>
                                </div>
                                <input type="text" class="form-control text-right" aria-label="Small" aria-describedby="inputGroupTotal" id="txtTotal" disabled>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-sm-12">
                    <div class="card shadow">
                        <div class="card-body">
                            <div class="form-group mb-0">
                                <button class="btn btn-warning btn-sm btn-block" id="btnFinishingBooking">Terminar y Grabar Reserva</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


    @section Scripts{
    <!-- ============================================================
    =SCRIPTS PARA ESTA PAGINA
    ===============================================================-->
    <script src="~/js/vistas/NewBooking.js"></script>

    <script src="~/vendor/select2/select2.min.js"></script>
    <script src="~/vendor/select2/es.min.js"></script>
    }
